<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:GestVAE"
        xmlns:localVM="clr-namespace:GestVAE.VM"
        xmlns:GestVAEcls="clr-namespace:GestVAEcls;assembly=GestVAEcls" 
        xmlns:VM="clr-namespace:GestVAE.VM" 
    xmlns:SampleDataSource="clr-namespace:Expression.Blend.SampleData.SampleDataSource" 
    x:Class="GestVAE.MainWindow"
        mc:Ignorable="d"

        Title="EHESP : Gestion VAE" Height="847.821" Width="1061.286" Loaded="Window_Loaded" Icon="IMG/logo_ehesp-ConvertImage.ico" WindowStyle="ThreeDBorderWindow" FocusVisualStyle="{DynamicResource BackGround}">

    <!--    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveCommand_Executed" CanExecute="SaveCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Open" Executed="OpenCommand_Executed" CanExecute="OpenCommand_CanExecute" />
    </Window.CommandBindings>
-->

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:EnumToBoleanConverter x:Key="EnumToBoleanConverter"></local:EnumToBoleanConverter>
        <local:BooleanToCursorConverter x:Key="BoolToCursor"></local:BooleanToCursorConverter>
        <Style x:Key="Label" TargetType="{x:Type Label}" BasedOn="{x:Null}">

            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
        <Style x:Key="CustTextBox" TargetType="{x:Type TextBox}" BasedOn="{x:Null}">
            <Setter Property="Margin" Value="0,10,10,0"/>
        </Style>
        <Style x:Key="GridStyle1" TargetType="{x:Type Grid}"  >
            <Setter Property="ShowGridLines" Value="False"/>
            <Setter Property="Background" Value="#FF90A4C1"/>
        </Style>
        <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABAdB3"/>
        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#FF7EB4EA"/>
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#FF569DE5"/>

    </Window.Resources>

    <DockPanel     Cursor="{Binding IsBusy, Converter={StaticResource BoolToCursor}}">
        <ToolBarTray DockPanel.Dock="Top" >
            <ToolBar>
                <Button Name="btnSave" Command="{Binding SaveCommand}" Content="Save" />
                <Button Name="btnRefresh" Command="{Binding RefreshCommand}" Content="Refresh" />
                <Button Name="btnParam" Command="{Binding dlgParamCommand}" Content="Paramètres" />
            </ToolBar>
        </ToolBarTray>

        <Grid x:Name="MainGrid"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition MinWidth="100"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#FF0F0000"/>
            <Grid x:Name="GridLeft" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GridSplitter  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="#FF0A0101"  RenderTransformOrigin="0.5,0.5" Grid.Row="1" >
                </GridSplitter>
                <Grid x:Name="grdRecherche"  Grid.Row="0" Margin="0" Style="{DynamicResource GridStyle1}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="19*"/>
                        <RowDefinition/>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="26" Width="129">Identifiant VAE:</Label>
                    <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Margin="10" 
                             Name="tbRechIdentVAE" HorizontalAlignment="Stretch"/>
                    <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="26" Width="129">Nom:</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="10"
                             Name="tbRechNom" />
                    <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="26" Width="129">Prénom:</Label>
                    <TextBox  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" 
                              Name="tbRechPrénom" Margin="10" />
                    <Label  Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="26" Width="129">Ville:</Label>
                    <TextBox  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Name="tbRechVille" Margin="10" ></TextBox>
                    <Label  Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" 
                            >Réception Livret1:</Label>
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2">
                        <Label  Margin="10">entre le :</Label>
                        <DatePicker  Grid.Row="4" Grid.Column="2" Name="dpRechReceptL1Deb" Margin="10" Width="98"></DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2">
                        <Label  Margin="10">et le</Label>
                        <DatePicker  Name="dpRechReceptL1Fin" Margin="10" Width="98" Height="26"></DatePicker>
                    </StackPanel>
                    <Label  Grid.Row="6" Grid.Column="0" >Réception Livret2:</Label>
                    <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
                        <Label Margin="10"  Grid.Row="5" Grid.Column="3" >entre le :</Label>
                        <DatePicker  Grid.Row="5" Grid.Column="2" Name="dpRechReceptL2Deb" Margin="10" Width="95"></DatePicker>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="2">
                        <Label Margin="10" >et le :</Label>
                        <DatePicker  Name="dpRechReceptL2Fin" Margin="10" Width="95" Height="26"></DatePicker>
                    </StackPanel>
                    <Button  Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="5" Name="cbRecherche" Command="{Binding RechercherCommand}" Margin="10">Rechercher</Button>
                    <Label  Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="46" Width="85" Content="Date de &#xD;&#xA;naissance :" Margin="10,10,0,24"/>
                    <DatePicker x:Name="dpRechDateNaiss" Grid.Column="1" HorizontalAlignment="Left" Margin="10,28,0,0" Grid.Row="4" VerticalAlignment="Top"/>


                </Grid>
                <Grid Name="grdlbCandidat" VerticalAlignment="Stretch" Grid.Row="2" Style="{DynamicResource GridStyle1}"
                      >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="lbCandidats"    Grid.Row ="0" MinHeight="100" VerticalAlignment="Stretch" 
                             ItemsSource="{Binding lstCandidatVM}" 
                             SelectedItem="{Binding CurrentCandidat}" Background="{x:Null}" 
                             IsSynchronizedWithCurrentItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding TheCandidat.Nom}" />
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding TheCandidat.Prenom}" />
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding TheCandidat.Ville}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!--<Button x:Name="cbAddCandidat" Content="Ajout candidat" 
                                Height="30" Margin="10" DockPanel.Dock="Bottom"
                                Command="{Binding AddCandidatCommand}"
                                Style="{DynamicResource StyleBtn}"/>
                    -->
                    <Button x:Name="cbAddCandidat" Content="Ajout candidat" Grid.Row ="1"
                                Height="30" Margin="10" Command="{Binding AddCandidatCommand}"
                                />

                </Grid>




            </Grid>
            <Grid x:Name="GridRight" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid x:Name="grdDetailCandidat" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Style="{DynamicResource GridStyle1}"
                      DataContext="{Binding CurrentCandidat}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100
                                   "/>
                        <RowDefinition Height="Auto" MinHeight="28" />
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="26"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="36"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Label Content="Nom:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="39" Margin="0,1" />
                    <TextBox x:Name="tbNom" Grid.Column="1" Grid.Row="1"
                             Text="{Binding TheCandidat.Nom, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                             Style="{DynamicResource CustTextBox}" />
                    <Label Content="Nom naissance:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="93" Margin="0,1" />
                    <TextBox x:Name="tbNomNaissance" Grid.Row="2" Grid.Column="1" Text="{Binding TheCandidat.NomJeuneFille, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{DynamicResource CustTextBox}"  />
                    <Label Content="Prénom" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="51" Margin="0,1" />
                    <TextBox x:Name="tbPrenom" Grid.Row="3" Text="{Binding TheCandidat.Prenom, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Style="{DynamicResource CustTextBox}"  />
                    <Label Content="Prénom2" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="58" Margin="0,1" />
                    <TextBox x:Name="tbPrenom2" Grid.Row="4" Text="{Binding TheCandidat.Prenom2, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Style="{DynamicResource CustTextBox}" />
                    <Label Content="Prénom3" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="58" Margin="0,1" />
                    <TextBox x:Name="tbPrenom3" Grid.Row="5" Text="{Binding TheCandidat.Prenom3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Style="{DynamicResource CustTextBox}" />
                    <Label Content="Adresse" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" Height="58" Width="52" Margin="0,10,0,4" />
                    <TextBox x:Name="tbAdresse" Grid.Row="6" Text="{Binding TheCandidat.Adresse, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" Margin="0,10,10,10" Style="{DynamicResource CustTextBox}" />
                    <Label Content="CP/Ville" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="51" Margin="0,1" />
                    <TextBox x:Name="tbCPDomicile" Grid.Row="7" Text="{Binding TheCandidat.CodePostal, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Margin="0,10,308,0" />
                    <TextBox x:Name="tbVilleDomicile" Grid.Row="7" Text="{Binding TheCandidat.Ville, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Margin="94,10,10,0" Style="{DynamicResource CustTextBox}" />
                    <Label Content="Région Domicile : " Grid.Row="8" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="106" Margin="0,8" />
                    <!-- ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}},Path=DataContext.lstRegionVM}" -->
                    <ComboBox x:Name="cbxRegionDomicile" Grid.Row="8"  Grid.Column="1" IsEditable="True" Margin="0,10,10,10" 
                              Text="{Binding TheCandidat.Region}"
                              ItemsSource="{Binding Path=DataContext.lstRegionVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                              DisplayMemberPath="Nom"
                              SelectedValuePath="Nom">
                    </ComboBox>
                    <Label Content="Tel : " Grid.Row="9" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="33" Margin="0,6" />
                    <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1" Margin="0,0,10,0">
                        <TextBox x:Name="tbTel1"  Text="{Binding TheCandidat.Tel1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" MinWidth="50" Width="100" Margin="10" HorizontalAlignment="Center" Style="{DynamicResource CustTextBox}"   />
                        <TextBox x:Name="tbTel2" Text="{Binding TheCandidat.Tel2, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="100" Margin="10" MinWidth="50" Style="{DynamicResource CustTextBox}" />
                        <TextBox x:Name="tbTel3"  Text="{Binding TheCandidat.Tel3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="100" Margin="10" MinWidth="50" Style="{DynamicResource CustTextBox}"  />
                    </StackPanel>
                    <Label Content="Mail : " Grid.Row="10" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="41" Margin="0,29" />
                    <StackPanel Orientation="Vertical" Grid.Row="10" Grid.Column="1" Margin="0,0,10,0">
                        <TextBox x:Name="tbMail1" Grid.Row="10" Text="{Binding TheCandidat.Mail1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Margin="0,10,0,0"  />
                        <TextBox x:Name="tbMail2" Grid.Row="10" Text="{Binding TheCandidat.Mail2, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Margin="0,10,0,0" />
                        <TextBox x:Name="tbMail3" Grid.Row="10" Text="{Binding TheCandidat.Mail3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Margin="0,10,0,0" Style="{DynamicResource CustTextBox}" />

                    </StackPanel>
                    <Label Content="Date naissance : " Grid.Row="11" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="98" Margin="0,9" />
                    <Label Content="Ville naissance : " Grid.Row="12" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="96" Margin="0,1" />
                    <TextBox x:Name="tbVilleNaissance" Grid.Row="12" Text="{Binding TheCandidat.VilleNaissance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Style="{DynamicResource CustTextBox}" />
                    <Label Content="Nationnalité naissance : " Grid.Row="13" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="138" Margin="0,1" />
                    <TextBox x:Name="tbNationaliteNaissance" Grid.Row="13" Text="{Binding TheCandidat.NationaliteNaissance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Style="{DynamicResource CustTextBox}" />
                    <DatePicker x:Name="dtpDateNaissance" Grid.Column="1"  Grid.Row="11" SelectedDate="{Binding TheCandidat.DateNaissance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,10,10,10"/>
                    <Grid HorizontalAlignment="Left" Height="80"  VerticalAlignment="Top" Width="509" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="41*"/>
                            <RowDefinition Height="31*"/>
                            <RowDefinition Height="8*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Identifiant VAE:" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="27" Width="90"/>
                        <Label Content="Identifiant SISCOLE:" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="117" Height="24"/>
                        <TextBox Name="tbIdVAE" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,4,0,0" TextWrapping="Wrap" Text="{Binding TheCandidat.IdVAE}" VerticalAlignment="Top" Width="120"/>
                        <TextBox Name="tbIdSISCOLE" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="0,4,0,0" TextWrapping="Wrap" Text="{Binding TheCandidat.IdSiscole}" VerticalAlignment="Top" Width="120"/>
                        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="76,7,0,0" TextWrapping="Wrap" Text="Sexe :" VerticalAlignment="Top" Height="16" Width="42"/>
                        <RadioButton Content="Homme" Grid.Column="3" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Height="15" Width="85" IsChecked="{Binding TheCandidat.Sexe, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:Sexe.H}}"/>
                        <RadioButton Content="Femme" Grid.Column="3" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="21" Width="85" IsChecked="{Binding TheCandidat.Sexe, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:Sexe.F}}"/>
                    </Grid>
                    <Button x:Name="btnAddDiplomeCand" Grid.Row ="14" Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,0,10,10"  VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                            Command="{ Binding DataContext.AjouteDiplomeCandCommand , RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Height="21" Width="32"/>
                    <StackPanel Grid.Row =" 14" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" >
                            <Label>DEIS : </Label>
                            <CheckBox Name="chkIsDEIS" IsChecked="{Binding IsDEIS}" VerticalAlignment="Center"></CheckBox>
                            <Label>CAFERUIS :</Label>
                            <CheckBox Name="chkIsCAFERUIS" IsChecked="{Binding IsCAFERUIS}" VerticalAlignment="Center"></CheckBox>
                            <Label>CAFDES :</Label>
                            <CheckBox Name="chkIsCAFDES" IsChecked="{Binding IsCAFDES}" VerticalAlignment="Center"></CheckBox>
                        </StackPanel>
                        <DataGrid Name="gridLstDiplome" VerticalAlignment="Top" ItemsSource="{Binding lstDiplomesCandVMs}"  AutoGenerateColumns="False" CanUserAddRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CellEditEnding="gridLstDiplome_CellEditEnding" MouseDoubleClick="gridLstDiplome_MouseDoubleClick">
                                                        <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom" IsReadOnly="true" Binding="{Binding NomDiplome}"/>
                                <DataGridTextColumn Header="Obtention" Binding="{Binding DateObtentionDiplome, StringFormat='dd/MM/yyyy'}"/>
                                <DataGridTextColumn Header="Numero" Binding="{Binding NumeroDiplome}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="cbAddDiplome" 
                                Command="{Binding DataContext.AjouteDiplomeCandCommand, 
                            RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="cbAddDiplome_Click">Ajouter</Button>

                    </StackPanel>

                    <Image HorizontalAlignment="Left" Height="14" Margin="0,12,0,0" Grid.Row="15" VerticalAlignment="Top" Width="15" IsEnabled="False" Source="IMG/LivretN.ico"/>
                    <TextBlock HorizontalAlignment="Left"  Grid.Row="15" Margin="20,10,0,0" TextWrapping="Wrap" Text="Livrets" VerticalAlignment="Top" Height="16" Width="63"/>
                    <DataGrid Name="gridLstLivrets" Grid.Column="1" Margin="0,10,50,0" Grid.Row="15" VerticalAlignment="Top" ItemsSource="{Binding lstLivrets}"  AutoGenerateColumns="False" CanUserAddRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CellEditEnding="gridLstLivrets_CellEditEnding" MouseDoubleClick="gridLstLivrets_MouseDoubleClick" Height="26">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Numero" Binding="{Binding TheLivret.Numero}"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TheLivret.Typestr}"/>
                            <DataGridTextColumn Header="Etat" Binding="{Binding TheLivret.EtatLivret}"/>
                            <DataGridTextColumn Header="Echéance" Binding="{Binding TheLivret.DateEcheance, StringFormat='dd/MM/yyyy'}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnAddLivret1" Grid.Row ="15" Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,0,20,10"  VerticalAlignment="Bottom" HorizontalAlignment="Right" RenderTransformOrigin="-0.656,0.619" 
                            Command="{ Binding DataContext.AjouteL1Command , RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Height="21" Width="32" >
                        <Image Source="IMG/add.png" Margin="0,0,10,0" Height="17" Width="18" RenderTransformOrigin="0.528,0.5" />
                    </Button>
                    <Button x:Name="btnAddLivret2" Grid.Row ="15" Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,0,0,10"  VerticalAlignment="Bottom" HorizontalAlignment="Right"  RenderTransformOrigin="-0.656,0.619"
                            Command="{Binding DataContext.AjouteL2Command, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Height="21" Width="32">
                        <Image Source="IMG/addL2.png" Margin="0,0,10,0" Height="17" Width="18" RenderTransformOrigin="0.528,0.5" />
                    </Button>
                    <Image HorizontalAlignment="Left" Height="14" Margin="0,12,0,0" Grid.Row="14" VerticalAlignment="Center" Width="15" IsEnabled="False" Source="IMG/diplome.png"/>
                    <TextBlock HorizontalAlignment="Left"  Grid.Row="14" Margin="20,12,0,0" TextWrapping="Wrap" Text="Diplômes" VerticalAlignment="Center" Height="16" Width="63"/>

                </Grid>
            </Grid>



        </Grid>
    </DockPanel>

</Window>
