<Window x:Class="GestVAE.frmLivret1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestVAE"
        xmlns:GestVAEcls="clr-namespace:GestVAEcls;assembly=GestVAEcls" xmlns:VM="clr-namespace:GestVAE.VM" xmlns:SampleDataSource="clr-namespace:Expression.Blend.SampleData.SampleDataSource" 
        mc:Ignorable="d"
        Title="Livret1" Height="650" Width="800" Icon="IMG/LivretN.ico">
    <Window.Resources>
        <local:EnumToBoleanConverter x:Key="EnumToBoleanConverter"></local:EnumToBoleanConverter>

        <Image x:Key="AddIco" Source="IMG/Add.png"></Image>
    </Window.Resources>
    <Grid x:Name ="grdLivret" ShowGridLines="true"  >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD1EEF9" Offset="0"/>
                <GradientStop Color="#FF47565B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <!--Type-->
            <RowDefinition Height="Auto"/>
            <!-- généralité -->
            <RowDefinition Height="80"/>
            <!--Tab contol-->
            <RowDefinition Height="Auto"/>
            <!-- Bouttons -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="LIVRET1" Grid.Row="0" FontSize="36" HorizontalAlignment="Center" >
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
            </TextBlock.Foreground>
        </TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="Numéro Livret :"/>
                    <TextBox x:Name="tbNumLivret" Text="{Binding TheLivret.Numero}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" >
                    <Label Content="Etat Livret :"></Label>
                    <ComboBox Name="cbxEtatLivret" Width="172" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="Diplome :"/>
                    <TextBox x:Name="tbDiplome" />
                </StackPanel>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="3" >
                <Label Content="Date échéance :"/>
                <DatePicker SelectedDate="{Binding Path=TheLivret.DateEcheance}"/>
            </StackPanel>

        </Grid>

        <TabControl Name="TabL1" Grid.Row="2" Height="450" IsEnabled="{Binding IsLivretNonValidé}" >
            <TabControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC1FBF9" Offset="0"/>
                    <GradientStop Color="#FF08CBC2" Offset="1"/>
                </LinearGradientBrush>
            </TabControl.Background>
            <TabItem x:Name="tabL1" Header="Livret1" Margin="0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFBCF5FB" Offset="0"/>
                        <GradientStop Color="#FF15E4F9" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid x:Name="grdEntete" ShowGridLines="True" Margin="0" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="cgID" Width="15*"/>
                        <ColumnDefinition Width="69*"/>
                        <ColumnDefinition Width="178*"/>
                        <ColumnDefinition x:Name="cgDateDemande" Width="262*"/>
                        <ColumnDefinition x:Name="cgEtat" Width="262*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="lgIDDemandeEtat" Height="Auto"/>
                        <RowDefinition x:Name="lgContratTypeOrigine" Height="Auto"/>
                        <RowDefinition x:Name="lgDates"/>
                    </Grid.RowDefinitions>



                    <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="4">
                        <StackPanel Orientation="Horizontal">
                            <Label>Pièces jointes :</Label>
                            <TextBlock Name="tbPieceJointes" VerticalAlignment="Center" Foreground="{Binding ResultatPiecesJointesL1Color}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <DataGrid x:Name="dgPiecesjointes" Background="#FFF90A0A" ItemsSource="{Binding TheLivret.lstPiecesJointes, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" SelectionMode="Single" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" CanUserAddRows="False" Margin="10" RowHeaderWidth="0" Width="202" CellEditEnding="dgPiecesjointes_CellEditEnding" >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Désignation" Binding="{Binding Nom}" Width="4*"/>
                                    <DataGridCheckBoxColumn Header="Recu" Binding="{Binding IsRecu}" Width="1*"/>
                                    <DataGridCheckBoxColumn Header="OK" Binding="{Binding IsOK}" Width="1*"/>
                                </DataGrid.Columns>

                            </DataGrid>
                            <Button x:Name="btnAddPJ" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnAddPJ_Click">
                                <Image Source="IMG/add.png" Margin="0,0,10,0" />
                            </Button>

                        </StackPanel>
                    </StackPanel>
                    <!-- LgContratTypeOrigine-->
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <RadioButton Name="rbcontrat" Content="Contrat" IsChecked="{Binding IsContrat}" GroupName="ContratLivret" Margin="10"></RadioButton>
                        <RadioButton Name="rbconvention" Content="Convention" IsChecked="{Binding IsConvention}" GroupName="ContratLivret" Margin="10"></RadioButton>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="3">
                        <Label Content="Type demande :"></Label>
                        <ComboBox Name="cbxTypeDemande" 
                          SelectedItem="{Binding TheLivret.TypeDemande}" 
                          ItemsSource="{Binding LstTypeDemande}"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="4">
                        <Label Content="Origine demande :"></Label>
                        <ComboBox Name="cbxOrigineDemande"
                          SelectedItem="{Binding TheLivret.OrigineDemande}" 
                          ItemsSource="{Binding LstOrigineDemande}"/>


                    </StackPanel>
                    <!-- LgDates-->
                    <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" >
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Date demande" Width="150"></Label>
                            <DatePicker Name="dtpDateDemande" SelectedDate="{Binding Path=TheLivret.DateDemande}" Width="101"></DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Date envoi EHESP" Width="150"></Label>
                            <DatePicker Name="dtpenvoiEHESP" Width="100" SelectedDate="{Binding Path=TheLivret.DateEnvoiEHESP}"></DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Accusé de réception" Width="150"></Label>
                            <CheckBox  Name="chkAccuseRecepEHESP" IsChecked="{Binding TheLivret.isEnvoiEHESP_AR}" VerticalAlignment="Center" ></CheckBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Date Reception Candidat" Width="150" ></Label>
                            <DatePicker Name="dtpReceptCandidat" Width="99" SelectedDate="{Binding Path=TheLivret.DateReceptCandidat}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Name="pnlDatesEnvois" Orientation="Vertical" Grid.Row="2" Grid.Column="3">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Date Envoi candidat :"></Label>
                            <DatePicker Name="dtpenvoiCandidat" SelectedDate="{Binding Path=TheLivret.DateEnvoiCandidat}" Width="122"></DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Accusé de réception" Width="150"></Label>
                            <CheckBox  Name="chkAccuseRecepCand" IsChecked="{Binding TheLivret.isEnvoiCand_AR}" VerticalAlignment="Center" ></CheckBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Date Reception EHESP"></Label>
                            <DatePicker Name="dtpReceptEHESP"  SelectedDate="{Binding Path=TheLivret.DateReceptEHESP}" Width="114"></DatePicker>
                        </StackPanel>
                    </StackPanel>



                </Grid>

            </TabItem>
            <TabItem x:Name="tabEchanges" Header="Echanges" Margin="0" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FF8EAAC7" Offset="0"/>
                        <GradientStop Color="#FF0A7FCF" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <Label Content="Echanges :" Foreground="#FF0078D7"/>
                    <StackPanel Orientation="Horizontal" Background="AliceBlue" HorizontalAlignment="Stretch">
                        <DataGrid x:Name="dgEchanges"  ItemsSource="{Binding TheLivret.lstEchanges}" AutoGenerateColumns="False" SelectionMode="Single" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" CanUserAddRows="False" Margin="10" RowHeaderWidth="0" HorizontalAlignment="Stretch" Width="744">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding DateEch,StringFormat='dd/MM/yyyy'}" Width="1*"/>
                                <DataGridTextColumn Header="Motif" Binding="{Binding MotifEch}" Width="*"/>
                                <DataGridTextColumn Header="Echéance" Binding="{Binding DateEcheanceEch,StringFormat='dd/MM/yyyy'}" Width="1*"/>
                                <DataGridTextColumn Header="Réception" Binding="{Binding DateReceptionEch,StringFormat='dd/MM/yyyy'}" Width="1*"/>
                                <DataGridCheckBoxColumn Header="OK" Binding="{Binding IsOK}" Width="0.5*"/>
                                <DataGridTextColumn Header="Commentaire" Binding="{Binding CommentaireEch}" Width="2*"/>
                            </DataGrid.Columns>

                        </DataGrid>
                        <Button x:Name="btnAddEchange" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"  VerticalAlignment="Center" HorizontalAlignment="Right" Click="btnAddEchange_Click">
                            <Image Source="IMG/add.png" Margin="0,0,10,0"  />
                        </Button>

                    </StackPanel>
                </StackPanel>

            </TabItem>
            <TabItem x:Name="tabJury" Header="Jury" Margin="0,-2,0,0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FF7A8EB0" Offset="0"/>
                        <GradientStop Color="#FF083583" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <StackPanel Name="pnlJury" Orientation="Vertical"  HorizontalAlignment="Stretch">
                    <Label Content="Jury :" Foreground="#FF0078D7"/>
                    <Grid Name="grdJury1"  ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <!--Type-->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <Label Margin="10,0,0,0" VerticalAlignment="Center">Nom:</Label>
                            <TextBox Name="tbNomJury" HorizontalAlignment="Stretch" Width="197" Margin="10"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <Label>Date:</Label>
                            <DatePicker Name="dtpDateJury" HorizontalAlignment="Left" Margin="0,10"></DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                            <Label VerticalAlignment="Center">Lieu:</Label>
                            <TextBox Name="tbLieuJury" HorizontalAlignment="Left" Width="220" Margin="10"></TextBox>
                        </StackPanel>
                        <Label Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center">Décision:</Label>
                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Name="cbxDecision" HorizontalAlignment="Stretch" Margin="10"/>
                        <Label Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center">Motif général:</Label>
                        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Name="cbxMotifGeneral" HorizontalAlignment="Stretch" Margin="10"></ComboBox>
                        <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0">Motif Détaillé:</Label>
                        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Name="cbxMotifDetaille" HorizontalAlignment="Stretch" Margin="10,10,10,14"></ComboBox>
                        <Label Grid.Row="4" Grid.Column="0" Margin="12,0,0,0" VerticalAlignment="Center">Commentaire:</Label>
                        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Name="tbCommentaire" HorizontalAlignment="Stretch" Margin="10" Height="22"></TextBox>
                        <Label Grid.Row="5" Grid.Column="0" Visibility="{Binding IsRefuseVisibility}" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">Recours:</Label>
                        <CheckBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Name="chkRecours" Margin="10" Visibility="{Binding IsRefuseVisibility}"></CheckBox>
                    </Grid>
                </StackPanel>

            </TabItem>
            <TabItem x:Name="TabRecours" Header="Recours" Margin="0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFB5B5F3" Offset="0"/>
                        <GradientStop Color="#FF2626F3" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <StackPanel Name="pnlRecours" Orientation="Vertical"  HorizontalAlignment="Stretch" Margin="0,0,0,0">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFB5B5F3" Offset="0"/>
                            <GradientStop Color="#FF2626F3" Offset="0.993"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Label Content="Recours :" Foreground="#FF0078D7"/>
                    <Grid Name="grdRecours" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Label Width="100" VerticalAlignment="Center" Margin="10" Content="Date de dépôt :" />
                            
                        </StackPanel>
                        <DatePicker Name="dtpDateDepotRecours" Margin="10" Width="125"
                                    Grid.Row="0" Grid.Column="1"/>
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                            <Label VerticalAlignment="Center">Type de recours :</Label>
                            <RadioButton Name="rbTypeRecoursGracieux" GroupName="TypeRecours" 
                                 IsChecked="{Binding TypeRecours, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:EnumTypeRecours.Gracieux}}" VerticalAlignment="Center"
                                 >Gracieux</RadioButton>
                            <RadioButton Name="rbTypeRecoursContentieux" GroupName="TypeRecours" 
                                 IsChecked="{Binding TypeRecours, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:EnumTypeRecours.Contentieux}}" VerticalAlignment="Center"
                                 >Contentieux</RadioButton>
                            <!--                        
                    <RadioButton Content="Homme" Grid.Column="3" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Height="15" Width="85" IsChecked="{Binding TheCandidat.Sexe, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:Sexe.H}}"/>
                        <RadioButton Content="Femme" Grid.Column="3" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="21" Width="85" IsChecked="{Binding TheCandidat.Sexe, Converter={StaticResource EnumToBoleanConverter}, ConverterParameter={x:Static GestVAEcls:Sexe.F}}"/>
-->
                        </StackPanel>


                        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="10" >Motif du recours :</Label>
                        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="cbxMotifRecours" HorizontalAlignment="Stretch" Margin="10"></ComboBox>


                        <Label Grid.Row="3" Grid.Column="0" Margin="10" VerticalAlignment="Center" >Motif du recours :</Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Name="tbMotifRecoursCommentaire" HorizontalAlignment="Stretch" Margin="10"></TextBox>

                        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                            <Label Width="100" VerticalAlignment="Center" Margin="10" >Date d'examen:</Label>
                        </StackPanel>
                        <DatePicker  Grid.Row="4" Grid.Column="1" Name="dtpDateJuryRecours" HorizontalAlignment="Stretch" Margin="10" Width="125"></DatePicker>

                        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="2">
                            <Label VerticalAlignment="Center" >Lieu:</Label>
                            <TextBox Name="tbLieuJuryRecours" HorizontalAlignment="Left" Width="207" Margin="10"></TextBox>
                        </StackPanel>

                        <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="10">Décision:</Label>
                        <ComboBox  Grid.Row="5" Grid.Column="1" Name="cbxDecisionRecours" Grid.ColumnSpan="2" Margin="10"/>

                        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="10">Motif général:</Label>
                        <ComboBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Name="cbxMotifGeneralRecours" HorizontalAlignment="Stretch" Margin="10" ></ComboBox>
                        <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="10" >Motif Détaillé:</Label>
                        <ComboBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Name="cbxMotifDetailleRecours" HorizontalAlignment="Stretch" Margin="10"></ComboBox>
                        <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Margin="10" >Commentaire:</Label>
                        <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Name="tbCommentaireRecours" HorizontalAlignment="Stretch" Margin="10" ></TextBox>

                    </Grid>
                </StackPanel>

            </TabItem>
        </TabControl>

        <Button Name="dbCreerL2" Grid.Row="3" Margin="10" Click="dbCreerL2_Click" Style="{DynamicResource StyleBtn}">Valider et créer le Livret2</Button>

        <!-- ECHANGE-->
        <!-- Jury-->
        <!--Recours -->

    </Grid>
</Window>
