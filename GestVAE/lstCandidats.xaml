<Window x:Class="GestVAE.lstCandidats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestVAE"
        xmlns:GestVAEcls="clr-namespace:GestVAEcls;assembly=GestVAEcls" 
        mc:Ignorable="d"
        Title="lstCandidats" Height="450" Width="800" Loaded="Window_Loaded">

    <Grid ShowGridLines="true">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="619*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbCandidats" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Nom}" />
                        <TextBlock Text="{Binding Path=Prenom}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Name="tb" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="245,206,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding SelectedItem.Nom, ElementName=lbCandidats}"/>


    </Grid>
</Window>
